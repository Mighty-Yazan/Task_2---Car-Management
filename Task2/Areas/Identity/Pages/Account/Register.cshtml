@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}

<div class="login-page d-flex justify-content-center align-items-center min-vh-100">
    <div class="login-card shadow-lg rounded-4 p-5">
        <h2 class="text-center mb-4 fw-bold text-primary">@ViewData["Title"]</h2>

        <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger mb-3" role="alert"></div>

            
            <div class="form-floating mb-4">
                <input asp-for="Input.Email" class="form-control form-control-lg" autocomplete="username" placeholder="name@example.com" />
                <label asp-for="Input.Email">Email</label>
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>

            
            <div class="form-floating mb-4">
                <input asp-for="Input.Password" class="form-control form-control-lg" autocomplete="new-password" placeholder="Password" />
                <label asp-for="Input.Password">Password</label>
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>

            
            <div class="form-floating mb-4">
                <input asp-for="Input.ConfirmPassword" class="form-control form-control-lg" autocomplete="new-password" placeholder="Confirm Password" />
                <label asp-for="Input.ConfirmPassword">Confirm Password</label>
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
            </div>

            
            <button type="submit" class="btn btn-primary w-100 btn-hover btn-lg mb-4">Register</button>

            
            <div class="d-flex flex-column text-center">
                <a class="text-info mb-1 hover-link" asp-page="./Login">Already have an account? Log in</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

<style>
    html, body 
    {
        height: 100%;
        margin: 0;
        linear-gradient(to bottom right, #f0f4f8, #d9e2ec);
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        overflow: hidden;
    }

    .login-page 
    {
        height: 100vh;
    }

    .login-card 
    {
        background: #ffffff;
        max-width: 450px;
        width: 100%;
        border-radius: 1rem;
        padding: 2.5rem;
        box-shadow: 0 15px 35px rgba(0,0,0,0.2);
        transition: transform 0.3s ease, box-shadow 0.3s ease;
    }

    .login-card:hover 
    {
        transform: translateY(-5px);
        box-shadow: 0 25px 45px rgba(0,0,0,0.25);
    }

    h2 
    {
        font-size: 2rem;
    }

    .form-control:focus 
    {
        border-color: #00b4db;
        box-shadow: 0 0 10px rgba(0,180,219,0.3);
    }

    .btn-hover:hover 
    {
        transform: translateY(-2px) scale(1.02);
        box-shadow: 0 5px 15px rgba(0,0,0,0.2);
        transition: 0.3s;
    }

    .hover-link:hover 
    {
        color: #007bff !important;
        text-decoration: underline;
        transition: 0.2s;
    }

    @@media (max-width: 576px) 
    {
        .login-card

    {
        padding: 2rem 1.5rem;
    }

    }
</style>
