@model IEnumerable<Task2.Models.Car>

@{
    ViewData["Title"] = "Cars";
    var isAdmin = User.IsInRole("Admin");
}

<h2 class="mb-4 text-center fw-bold">🚗 My Cars</h2>

<div class="row g-4">

    @if (isAdmin)
    {
        <div class="col-12 col-sm-6 col-md-4 col-lg-3">
            <a asp-action="Create" class="text-decoration-none">
                <div class="admin-add-card">
                    <h1 class="text-primary">+</h1>
                    <p class="text-primary fw-bold">Add New Car</p>
                </div>
            </a>
        </div>
    }

    @foreach (var car in Model)
    {
        <div class="col-12 col-sm-6 col-md-4 col-lg-3">
            <div class="card h-100 shadow-sm card-hover rounded-4 overflow-hidden">
                @if (!string.IsNullOrEmpty(car.Img))
                {
                    <img src="@car.Img" class="card-img-top"
                         alt="@car.Name"
                         style="height:200px; object-fit:cover; cursor:pointer;"
                         onclick="showImageModal('@car.Img')" />
                }
                else
                {
                    <div class="card-img-top d-flex align-items-center justify-content-center bg-light text-muted"
                         style="height:200px; cursor:pointer;"
                         onclick="showImageModal('/images/no-image.png')">
                        No Image
                    </div>
                }

                <div class="card-body text-center">
                    <h5 class="card-title fw-bold">@car.Name</h5>
                </div>

                <div class="card-footer bg-white border-0 text-center pb-3">
                    <a asp-action="Details" asp-route-id="@car.id" class="btn btn-sm btn-primary mx-1 btn-hover">Details</a>

                    @if (isAdmin)
                    {
                        <a asp-action="Edit" asp-route-id="@car.id" class="btn btn-sm btn-warning mx-1 btn-hover">Edit</a>
                        <a asp-action="Delete" asp-route-id="@car.id" class="btn btn-sm btn-danger mx-1 btn-hover">Delete</a>
                    }
                </div>
            </div>
        </div>
    }
</div>

<div class="modal fade" id="imageModal" tabindex="-1" aria-labelledby="imageModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered modal-lg">
        <div class="modal-content rounded-4 overflow-hidden">
            <div class="modal-body p-0">
                <img src="" id="modalImage" class="img-fluid w-100" alt="Car Image" />
            </div>
        </div>
    </div>
</div>

@section Scripts 
{
    <script>
        function showImageModal(imgSrc) 
        {
            var modalImg = document.getElementById('modalImage');
            modalImg.src = imgSrc;
            var myModal = new bootstrap.Modal(document.getElementById('imageModal'));
            myModal.show();
        }
    </script>
}
