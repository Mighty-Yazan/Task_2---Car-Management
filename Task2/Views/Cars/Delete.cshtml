@model Task2.Models.Car

@{
    ViewData["Title"] = "Delete Car";
}

<div class="container my-5">
    <div class="card shadow-lg rounded overflow-hidden mx-auto" style="max-width:600px;">
        
        @if (!string.IsNullOrEmpty(Model.Img))
        {
            <img src="@Model.Img" class="card-img-top" alt="@Model.Name" style="height:300px; object-fit:cover;">
        }
        else
        {
            <div class="d-flex align-items-center justify-content-center bg-light" style="height:300px;">
                <span class="text-muted fs-5">No Image Available</span>
            </div>
        }

        
        <div class="card-body text-center">
            <h2 class="text-danger mb-4">Are you sure you want to delete this car?</h2>

            <ul class="list-group list-group-flush mb-4 shadow-sm rounded">
                <li class="list-group-item d-flex justify-content-between py-3">
                    <strong>Name:</strong> <span>@Model.Name</span>
                </li>
                <li class="list-group-item d-flex justify-content-between py-3">
                    <strong>Production Year:</strong> <span>@Model.prodyear</span>
                </li>
                <li class="list-group-item d-flex justify-content-between py-3">
                    <strong>Color:</strong> <span>@Model.Color</span>
                </li>
                <li class="list-group-item d-flex justify-content-between py-3">
                    <strong>Price:</strong> <span>$@string.Format("{0:N0}", Model.Price)</span>
                </li>
                <li class="list-group-item d-flex justify-content-between py-3">
                    <strong>Image File:</strong>
                    <span>
                        @if (!string.IsNullOrEmpty(Model.Img))
                        {
                            <a href="@Model.Img" target="_blank" class="btn btn-sm btn-outline-primary">View File</a>
                        }
                        else
                        {
                            <span class="text-muted">No file uploaded</span>
                        }
                    </span>
                </li>
            </ul>

            <form asp-action="Delete" class="d-flex justify-content-center gap-3 flex-wrap">
                <input type="hidden" asp-for="id" />
                <input type="submit" value="Delete" class="btn btn-danger btn-lg btn-hover px-5 py-3" />
                <a asp-action="Index" class="btn btn-secondary btn-lg btn-hover px-5 py-3">Back to List</a>
            </form>
        </div>
    </div>
</div>
