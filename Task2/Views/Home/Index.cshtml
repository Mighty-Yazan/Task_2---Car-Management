@{
    ViewData["Title"] = "Home";
}


<div class="hero-section text-center text-white d-flex flex-column justify-content-center align-items-center">
    <h1 class="display-4 mb-3">Welcome to Car Management</h1>
    <p class="lead mb-4">Manage your car collection easily, generate reports, and track your inventory with style.</p>
    <a asp-controller="Cars" asp-action="Index" class="btn btn-light btn-lg btn-hover px-5 py-3">View Cars</a>
</div>


<div class="container mt-5">
    <div class="row g-4">
        <div class="col-md-4">
            <div class="feature-card shadow-sm p-4 text-center">
                <h4>Add & Edit Cars</h4>
                <p>Easily add new cars, edit details, and upload images to keep your collection up-to-date.</p>
            </div>
        </div>
        <div class="col-md-4">
            <div class="feature-card shadow-sm p-4 text-center">
                <h4>Generate Reports</h4>
                <p>Get insights like total cars, price range, and most/least expensive cars at a glance.</p>
            </div>
        </div>
        <div class="col-md-4">
            <div class="feature-card shadow-sm p-4 text-center">
                <h4>Organized Inventory</h4>
                <p>Keep everything organized and accessible with our intuitive interface and responsive design.</p>
            </div>
        </div>
    </div>
</div>

<style>
    html, body 
    {
        overflow: hidden;
    }
    
    .hero-section 
    {
        background: linear-gradient(135deg, #007bff, #00bfff);
        height: 60vh;
        border-radius: 12px;
        margin-bottom: 50px;
        padding: 20px;
    }

    .hero-section h1 
    {
        font-weight: 700;
    }

    .hero-section p 
    {
        font-size: 1.25rem;
    }

    .feature-card 
    {
        background-color: #ffffff;
        border-radius: 12px;
        border: 1px solid #e0e0e0;
        transition: transform 0.3s ease, box-shadow 0.3s ease;
    }

    .feature-card:hover 
    {
        transform: translateY(-5px) scale(1.02);
        box-shadow: 0 10px 20px rgba(0,0,0,0.1);
    }

    .feature-card h4 
    {
        color: #34495e;
        font-weight: 600;
        margin-bottom: 15px;
    }

    .feature-card p 
    {
        color: #555555;
        font-size: 1rem;
        line-height: 1.6;
    }

    .btn-hover:hover 
    {
        transform: translateY(-2px) scale(1.02);
        box-shadow: 0 5px 10px rgba(0,0,0,0.15);
        transition: 0.3s;
    }
</style>
